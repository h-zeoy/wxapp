/* pages/play/play.wxss */
page {
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.play-wrap {
  width: 100%;
  height: 100%;
  background-image: url('http://polaris-test.oss-cn-beijing.aliyuncs.com/image/course/ZYWMESPS.png');
  background-size: 100% 100%;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  text {
    font-size: 32rpx;
    font-family: PingFangSC-Medium,PingFang SC;
    font-weight: 500;
    color:rgba(51,114,135,1);
    margin-top: 758rpx;
  }
}
.play-yuan-bg {
  width: 451rpx;
  height: 451rpx;
  background-image: url(http://polaris-test.oss-cn-beijing.aliyuncs.com/image/course/zJtzXYsm.png);
  background-size: 100% 100%;
  margin-top: 188rpx;
  position: absolute;
  z-index: 2;
  animation: headRotate 30s linear infinite;
}
.play-animation {
  animation-play-state: paused;
}
.play-btn {
  width: 116rpx;
  height: 116rpx;
  position: absolute;
  top: 359rpx;
  z-index: 10;
}
.play-btn-play {
  background-image: url(data:image/png;base64,);
  background-size: 100% 100%;
}
.play-btn-stop {
  background-image:url(data:image/png;base64,);
  background-size: 100% 100%;
}
@keyframes headRotate{
  0% {transform: rotate(0deg);}
  50% {transform: rotate(180deg);}
  100% {transform: rotate(360deg);}
}
